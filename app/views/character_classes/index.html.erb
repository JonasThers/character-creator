<h1>Classes</h1>
<p>List of the classes you can assign your characters</p>

<ul>
  <% @character_classes.each do |character_class| %>
    <li>
      <%= character_class.name %>
      <li><%= link_to "Edit", edit_character_class_path(character_class.id) %></li>
      <li><%= link_to "Destroy", character_class_url(character_class.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </li>
    </li>
  <% end %>
</ul>
