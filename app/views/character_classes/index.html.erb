<h1>Classes</h1>
<p>List of the classes you can assign your characters</p>

<% if user_signed_in? %>
  <%= link_to "Check pending classes", pending_classes_character_classes_path, class: "button" %>
<% else %>
  <%= link_to "Request a new class", new_character_class_path, class: "button" %>
<% end %>

<ul class="characters-classes-list">
  <% @character_classes.each do |character_class| %>
    <li class="characters-classes-list__character-class">
      <h3 class="characters-classes-list__character-class-name"><%= character_class.name %></h3>
      <% if user_signed_in? %>
        <li><%= link_to "Edit", edit_character_class_path(character_class.id) %></li>
        <li><%= link_to "Destroy", character_class_url(character_class.id), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
        </li>
    </li>
    <% end %>
  <% end %>
</ul>
